<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:Acl/etc/acl.xsd">
    <acl>
        <resources>
            <resource id="Magento_Backend::admin">
                <resource id="Magento_Backend::content">
                    <resource id="PWA_Blog::elements" title="Blog" sortOrder="10">
                        <resource id="PWA_Blog::post" title="Posts" sortOrder="10">
                            <resource id="PWA_Blog::post_save" title="Save" sortOrder="10" />
                            <resource id="PWA_Blog::post_delete" title="Delete" sortOrder="20" />
                        </resource>
                        <resource id="PWA_Blog::category" title="Categories" sortOrder="20">
                            <resource id="PWA_Blog::category_save" title="Save" sortOrder="10" />
                            <resource id="PWA_Blog::category_delete" title="Delete" sortOrder="20" />
                        </resource>
                        <resource id="PWA_Blog::tag" title="Tags" sortOrder="25">
                            <resource id="PWA_Blog::tag_save" title="Save" sortOrder="10" />
                            <resource id="PWA_Blog::tag_delete" title="Delete" sortOrder="20" />
                        </resource>
                        <resource id="PWA_Blog::comment" title="Comments" sortOrder="30">
                            <resource id="PWA_Blog::comment_save" title="Save" sortOrder="10" />
                            <resource id="PWA_Blog::comment_delete" title="Delete" sortOrder="20" />
                        </resource>
                    </resource>
                </resource>
            </resource>
        </resources>
    </acl>
</config>
